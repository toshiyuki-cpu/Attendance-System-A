<!--パーシャル-->
<% if @user.errors.any? %> <!--@userに対してエラーが発生しているかどうかの条件式-->
  <div id="error_explanation">
      <div class="alert alert-danger">
        入力エラーが<%= @user.errors.count %>件ありました。
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>