<% if object.errors.any? %> <!--アコーディオンに表示させる為@userからobjectに変更。@userに対してエラーが発生しているかどうかの条件式-->
  <div id="error_explanation">
      <div class="alert alert-danger">
        入力エラーが<%= object.errors.count %>件ありました。<!--@user.errors.count-->
      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %> <!--@user.errors.full_messages.each do |msg|-->
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>