<% provide(:title, @user.name) %>

<div>
	<table class="table table-bordered table-condensed user-table">
		<tr>
			<td>
				<%= link_to "◀️", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
				<!--@first_day = params[:date].nil? ? Date.current.beginning_of_month : params[:date].to_date-->
				【<%= l(@first_day, format: :middle) %>】時間管理表
				<%= link_to "▶️", user_path(date: @first_day.next_month), class: "btn btn-info" %>
				</td>
			<td>指定勤務開始時間<br/>指定勤務終了時間</td> <!-- <br/>で改行できる -->
			<td colspan="3"><br/>基本時間 : <%= format_basic_info(@user.basic_time) %></td>
			<td><br/>初日 : <%= l(@first_day, format: :short) %></td>
		</tr>
		
		<tr>
			<td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
	<!--@userのユーザーオブジェクトにdepartmentが存在するか？存在する場合はその値を、存在しない場合は"未所属"という文字列を出力-->
			<td>氏名 :<%= @user.name %></td>
			<td>コード</td>
			<td></td>
			<td>出勤日数</td>
			<td>締め : <%= l(@last_day, format: :short) %></td>
		</tr>
	</table>
</div>

<div>
	<table class="table table-bordered table-condensed table-hover" id="table-attendances">
		<thead>
			<tr>
				<th rowspan="3">残業申請</th>
				<th rowspan="3">日付</th>
				<th rowspan="3">曜日</th>
				<th colspan="8">実績</th>
				<th colspan="5">所定外勤務</th>
			</tr>
			<tr>
				<th colspan="3">出社</th>
				<th colspan="3">退社</th>
				<th rowspan="2">在社時間</th>
				<th rowspan="2">備考</th>
				<th colspan="2">終了予定時間</th>
				<th rowspan="2">時間外残業</th>
				<th rowspan="2">業務処理内容</th>
				<th rowspan="2">指示書確認印</th>
			</tr>
			<tr>
				<th>時</th>
				<th>分</th>
				<th></th>
				<th>時</th>
				<th>分</th>
				<th></th>
				<th>時</th>
				<th>分</th>
			</tr>
		</thead>
		
		<tbody>
			<% @attendances.each do |day| %> <!--# 範囲オブジェクトとして扱う-->
			<!--@attendances = @user.attendances.where(worked_on: @first_day..@last_day).order(worked_on)-->
			<tr>
				<td></td>　　　　　　　　　　　　　　　<!--format: :~と記述することで、指定のフォーマットを指定できます-->
				<td><%= l(day.worked_on, format: :short) %></td> <!--config/localesディレクトリにあるja.ymlロケールファイルを参照-->
				<td>
					<% if day.worked_on.wday == 0 %> <!--日曜日の色　赤-->
              <font color="#ff000">
          <% elsif day.worked_on.wday == 6 %> <!--土曜日の色　青-->
              <font color="#0033cc">
          <% end %>
					<%= $days_of_the_week[day.worked_on.wday] %></td> 
				<td>
					<%= l(day.started_at, format: :hour) if day.started_at.present? %>
					<!--後置きのifによって、started_atの値が存在する場合のみ表示できるよう制御しています-->
				</td>
				<td><%= l(day.started_at, format: :minute) if day.started_at.present? %></td>
				<td>
					<!--Attendances Helperにattendance_state(attendance)を定義した為下記の記述になる-->
					<% if btn_text = attendance_state(day) %>
						<%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
					<% end %>
				</td>
				<td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
				<td><%= l(day.finished_at, format: :minute) if day.finished_at.present? %></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
			<% end %>
			<tr>
				<td rowspan="2"></td>　　　　　　　　　　　　
				<td colspan="2">累計日数</td>
				<td colspan="6"></td> 
				<td>在社時間合計</td>
				<td colspan="5"></td>
				<td rowspan="2">所属長承認</br>未申請</td>
			</tr>
			<tr>
				<td colspan="2"></td>　　　　　　　　　　　　
				<td colspan="6"></td>
				<td></td> 
				<td colspan="5"></td>
			</tr>
		</tbody>
	</table>
</div>