<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% @users.each do |user| %>
        <p><%= user.name %></p>
        <p>|
        <%= link_to "削除", user, method: :delete,
          data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %></P>
          
    <div class="jumbotron">
      <div>
        <p><%= link_to "編集", edit_basic_info_user_path(user), remote: true, class: "btn btn-lg btn-primary" %></p>
      </div>                                             <!--remote: trueがモーダルウインドウ表示のために必要な記述-->
    </div>
    <% end %>
  </div>
</div>
    
  <%= will_paginate %>
</div>

<!--モーダルウインドウ表示-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<!--次はモーダルウインドウ部分となるパーシャルファイルと、
パーシャルをモーダルウインドウとして表示するためのJavaScriptファイルを作りましょう
$ touch app/views/users/_edit_basic_info.html.erb
$ touch app/views/users/edit_basic_info.js.erb   -->