<% provide(:title, @user.name) %>

<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
<div>
  <h1>勤怠編集</h1>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出社</th>
        <th>退社</th>
        <th>翌日</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>指示者確認<%= "\u329e" %></th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
      <!--各フォームのinputタグのname属性にattendances[id][カラム名]という形式で展開されるようになる-->
      <!--<input class="form-control" type="time" name="user[attendances][1][started_at]" id="user_attendances_1_started_at" />-->
        <%= f.fields_for "attendances[]", day do |attendance| %> <!--fields_forという特殊なヘルパーメソッド-->
        <!--このメソッドはform_with内で異なるモデルを編集したい時に使うことができます。
            つまり、@userに紐付く@attendancesの情報が編集可能になるということ-->
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
            <td>
              <% if day.worked_on.wday == 0 %> <!--日曜日の色　赤-->
                <font color="#ff000">
              <% elsif day.worked_on.wday == 6 %> <!--土曜日の色　青-->
                <font color="#0033cc">
              <% end %>
					    <%= $days_of_the_week[day.worked_on.wday] %>
              </td>
              <% if !current_user.admin? && (Date.current < day.worked_on) %>
              <!--「管理権限者では無いこと、かつ勤怠オブジェクトが当日から判断して翌日以降」「それ以外」で分岐
                                                           readonly: trueオプション-->
                <td><%= attendance.time_field :started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_field :finished_at, readonly: true, class: "form-control" %></td>
              <% else %>
                <td><%= attendance.time_field :started_at, class: "form-control" %></td>
                <td><%= attendance.time_field :finished_at, class: "form-control" %></td>
              <% end %>
              <td></td>
              <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= working_times(day.started_at, day.finished_at) %>
              <% end %>
            </td>
            <td><%= attendance.text_field :note, class: "form-control" %></td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="center">
  <%= link_to "⬆️", '#', class: "btn btn-lg btn-default" %>
  <%= link_to "勤怠へ戻る", user_path(date: @first_day), class: "btn btn-lg btn-default" %>
  <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
</div>
<% end %>