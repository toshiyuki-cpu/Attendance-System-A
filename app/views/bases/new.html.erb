<% provide(:title, '拠点追加') %>
<% provide(:class_text, 'basenew') %>
<% provide(:button_text, '新規作成') %>
<h1>拠点情報追加</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_with(model: @base, local: true) do |f| %>
      <%= f.label :base_number, class: "label-basenew" %>
      <%= f.text_field :base_number, class: "form-control" %>
      
      <%= f.label :base_name, class: "label-basenew" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label :base_type, class: "label-basenew" %>
      <%= f.select :base_type, [['出勤', 1], ['退勤', 2]], { selected: 1 }, { id: "base_id", class: "base_class" } %>
      
       <%= f.submit "新規登録" , class: "btn btn-primary btn-block btn-basenew" %>
    <% end %>
  </div>
</div>