<% provide(:title, '拠点修正') %>
<% provide(:class_text, 'baseedit') %>
<% provide(:button_text, '修正') %>
<h1>拠点情報修正</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_with(model: @base, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @base %>
    
      <%= f.label :base_number, class: "label-baseedit" %>
      <%= f.text_field :base_number, class: "form-control" %>
      
      <%= f.label :base_name, class: "label-baseedit" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label :base_type, class: "label-baseedit" %>
      <%= f.select :base_type, [['出勤', "出勤"], ['退勤', "退勤"]], { selected: 1 }, { id: "base_id", class: "label-baseedit-select" } %>
      
       <%= f.submit "修正する" , class: "btn btn-primary btn-block btn-baseedit" %>
    <% end %>
  </div>
</div>